---
// Page Header Section
// ------------
// Description: The basic page header.

// Components
// - Layout
import Section from "../../ui/Section.astro"
import Row from "../../ui/Row.astro"
import Col from "../../ui/Col.astro"

// Props
type Props = {
  id?: string
  title?: string
  text?: string
  classes?: string
}
const { id = "intro", title, text, classes } = Astro.props
---

<Section id={id} classes=`bg-zinc-50 dark:bg-zinc-900 ${classes}`>
  <Row>
    <Col span="12" align="center">
      <header class="mx-auto max-w-3xl space-y-8">
        <h1
          class="font-heading text-4xl sm:text-5xl md:text-6xl"
          set:html={title}
        />
        <p
          class="text-lg leading-relaxed text-muted-foreground"
          set:html={text}
        />
      </header>
    </Col>
  </Row>
</Section>
