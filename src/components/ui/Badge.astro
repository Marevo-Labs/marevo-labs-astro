---
// Badge
// ------------
// Description: A badge is a visual indicator that draws attention to an interface element. It enhances the component to which it is attached with additional information.
// Properties:
// - Name: the text of the badge
// - Link: the link of the badge (optional)
// - Type: the type of the badge (neutral, primary)
// - Classes: additional classes

// Reference: https://wind-ui.com/components/badges/

// Props
type Props = {
  name: string
  link?: string
  type?: string
  classes?: string
}
const { name, link, type = "neutral", classes } = Astro.props
---

{
  link ? (
    <a
      href={link}
      class:list={[
        "badge inline-flex items-center justify-center gap-1 rounded px-1.5 py-1 text-sm transition-colors",
        { [`${classes}`]: classes },
        {
          [`badge--${type} bg-zinc-100 text-zinc-500 dark:bg-zinc-800 dark:text-zinc-500`]:
            type === "neutral",
        },
        { [`badge--${type} bg-primary-500 text-white`]: type === "primary" },
      ]}
    >
      {name}
    </a>
  ) : (
    <span
      class:list={[
        "badge inline-flex items-center justify-center gap-1 rounded px-1.5 py-1 text-sm transition-colors",
        { [`${classes}`]: classes },
        {
          [`badge--${type} bg-zinc-100 text-zinc-500 dark:bg-zinc-800 dark:text-zinc-500`]:
            type === "neutral",
        },
        { [`badge--${type} bg-primary-500 text-white`]: type === "primary" },
      ]}
    >
      {name}
    </span>
  )
}
