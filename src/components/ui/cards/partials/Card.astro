---
import { cn } from "@/lib/utils"

// Card
// ------------
// Description: the basic card foundation. Contains the background, shadow and border radius
// Properties:
// - link: will allow the whole card to be linkable
// - classes: extra classes

// Props
type Props = {
  link?: string
  classes?: string
}
const { link, classes } = Astro.props
const cardClasses = cn(
  "h-full flex flex-col overflow-hidden rounded border border-zinc-100 bg-white text-zinc-500 shadow-lg shadow-zinc-700/5 dark:border-zinc-800 dark:bg-zinc-900 dark:shadow-zinc-950/50",
  classes
)
---

{
  link ? (
    <a href={link} class={cardClasses}>
      <slot />
    </a>
  ) : (
    <div class={cardClasses}>
      <slot />
    </div>
  )
}
