---
// CTA
// ------------
// Description: a basic call to action component
// Properties:
// - Title: the title of the CTA
// - Text: the text of the CTA
// - Mode: the mode of the CTA (light, dark)
// - Bg: the background of the CTA
// - classes: additional classes

// Props
type Props = {
  title?: string
  text?: string
  mode?: "light" | "dark"
  bg?: any
  classes?: string
}
const {
  title = "Get started now",
  text = "Get started today and see the difference for yourself!",
  mode,
  bg,
  classes,
} = Astro.props

const bgImageUrl = bg?.src

const bgStyle =
  bg && bgImageUrl
    ? {
        "--bg-image": `url("${bgImageUrl}")`,
        backgroundImage: "var(--bg-image)",
      }
    : {}
---

<div
  class:list={[
    "flex flex-col items-center justify-center gap-8 rounded border border-zinc-100 bg-zinc-50 bg-cover bg-center p-8 text-center shadow-2xl shadow-zinc-600/20 lg:p-16 dark:border-zinc-800 dark:bg-zinc-900",
    { [`${classes}`]: classes },
    { [`${mode}`]: mode },
  ]}
  style={bgStyle}
>
  <div>
    <h2
      class="mb-6 text-pretty text-2xl lg:text-4xl font-heading"
      set:html={title}
    />
    <p class="max-w-4xl text-lg leading-relaxed" set:html={text} />
  </div>
  <slot />
</div>
