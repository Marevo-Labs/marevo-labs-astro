---
import "../global.css"
import LocalScripts from "@/components/scripts/LocalScripts.astro"
import Navbar from "@/components/Navbar.astro"
import Main from "@/components/ui/Main.astro"
import Footer from "@/components/ui/Footer.astro"
import Header from "@/components/blocks/head/Header.astro"
---

<!doctype html>
<html lang="en" class="scroll-animation mode-auto relative">
  <Header />
  <body>
    <Navbar />
    <Main>
      <slot />
    </Main>
    <Footer />
    <LocalScripts />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
